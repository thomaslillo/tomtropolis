---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="public/sunlogo.ico" type="ico">
        <title>Tomtropolis</title>
        <!-- Tailwind CSS -->
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">        
        <!-- font awesome for icons and such-->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
        <!-- google font-->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cairo+Play">
    </head>
	<body class="bg-gradient-to-b text-universal">
        <Navbar />
        <main>
            <div class="container mx-auto p-10">
            <!-- main content goes here -->
            <slot />
            <!-- End of main content -->
            </div>
        </main>
        <Footer />
    </body>
</html>
<style is:global>
	/* Customize the background color and keyframes */

    .bg-gradient-to-b {
        background: linear-gradient(-45deg, #9ab3f5, #a0e5e4 ,#ffd166, #ff6b6b );
        background-size: 400% 400%;
        animation: gradient 20s ease infinite;
    }

    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    /* Customize text color and font */

    .text-universal {
        color: #00021a;
        font-family: 'Cairo Play';
        padding-top: 2%;
        padding-bottom: 2%;
    }

    h1 {
        font-weight: bold;
        font-size: x-large;
        padding-top: 2%;
        padding-bottom: 2%;
    }

    h2 {
        font-weight: bold;
        font-size: large;
        padding-top: 1%;
        padding-bottom: 1%;
    }

    .body-links a {
        color: #3f0abb;
    }

</style>
